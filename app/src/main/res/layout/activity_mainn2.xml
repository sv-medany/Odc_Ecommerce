<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg"/>

    <ImageView
        android:id="@+id/accepted"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/accepted" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg2"
        android:layout_below="@+id/accepted">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Order has been\naccepted"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="25dp"
            android:textColor="@color/black"
            android:textSize="28sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your items has been placcd and is on \n
itâ€™s way to being processed"
            android:layout_marginBottom="50dp"
            android:gravity="center" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/track_order"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:textSize="18sp"
            android:layout_margin="25dp"
            android:background="@drawable/edit_button2"
            android:text="Track Order"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textAllCaps="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to home"
            android:gravity="center"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="@color/black"/>


    </LinearLayout>

</RelativeLayout>